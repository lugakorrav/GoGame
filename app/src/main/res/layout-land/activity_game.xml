<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_custom"
    android:paddingLeft="@dimen/activity_horizontal_margin_custom"
    android:paddingRight="@dimen/activity_horizontal_margin_custom"
    android:paddingTop="@dimen/activity_vertical_margin_custom"
    tools:context="com.lugakorrav.gogame.GameActivity">

    <com.lugakorrav.gogame.GameView

        custom:sectorCount="9"
        android:id="@+id/view_game"
        android:layout_width="@dimen/field_size_landscape"
        android:layout_height="@dimen/field_size_landscape"
        android:background="@mipmap/wood_50"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/textView_whoseTurn_Black"
        android:id="@+id/textView_whoseTurn"
        android:layout_alignTop="@+id/view_game"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="@dimen/activity_horizontal_margin" />

</RelativeLayout>
